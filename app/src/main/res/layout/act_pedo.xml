<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.anders.fuelshare.PEDO.PEDOact">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/pedo_test_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance traveled: \t0"
            android:id="@+id/pedo_test_distance"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery level: \t\t\t\t0"
            android:id="@+id/pedo_test_battery_level"
            android:layout_gravity="center"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/pedo_test_distance"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="use/distance: \t\t\t\t0"
            android:id="@+id/pedo_test_usage"
            android:layout_gravity="center"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/pedo_test_battery_level"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/pedo_test_btn"
            android:layout_below="@+id/pedo_test_usage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/pedo_test_btn2"
            android:layout_below="@+id/pedo_test_btn"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pedo_test_bat_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/battery_4" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charging"
            android:id="@+id/charging_checkBox"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/pedo_test_distance"
            android:layout_alignStart="@+id/pedo_test_distance"
            android:clickable="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Braking"
            android:id="@+id/break_checkBox"
            android:clickable="false"
            android:layout_below="@+id/charging_checkBox"
            android:layout_alignLeft="@+id/charging_checkBox"
            android:layout_alignStart="@+id/charging_checkBox" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On"
            android:id="@+id/turnedon_checkBox"
            android:layout_below="@+id/break_checkBox"
            android:layout_alignLeft="@+id/break_checkBox"
            android:layout_alignStart="@+id/break_checkBox" />
    </RelativeLayout>
</RelativeLayout>